@using Auction.Web.ViewModels.AuctionHouse
@model Auction.Web.InputModels.AuctionHouse.AuctionHouseCreateInputModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center p-3 mx-auto mt-3">
    <h3 class="text-center p-3 mx-auto">Create Auction House</h3>
    <form method="post" action="/Administration/AuctionHouse/Create" class="p-3 mx-auto mt-3" id="auctionHouseCreateForm">
        <div asp-validation="ModelOnly"></div>
        <div class="d-flex justify-content-center">
            <label asp-for="Name" class="h4">Name</label>
        </div>
        <input type="text" class="form-control text-center" id="name" placeholder="Name..."
               asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
        <div class="d-flex justify-content-center mt-3">
            <label asp-for="Address" class="h4">Address</label>
        </div>
        <input type="text" class="form-control text-center" id="address" placeholder="Address..."
               asp-for="Address">
        <span asp-validation-for="Address" class="text-danger"></span>
        <div class="d-flex justify-content-center mt-3">
            <label asp-for="Description" class="h4">Description</label>
        </div>
        <textarea type="text" rows="3" class="form-control text-center" id="description" placeholder="Description..."
               asp-for="Description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
        <div class="d-flex justify-content-center mt-3">
            <label asp-for="City" class="h4">City</label>
        </div>
        <select class="form-control text-center" id="city" asp-for="City">
            <option selected disabled>--- Select City ---</option>
            @foreach (var city in (IEnumerable<AuctionHouseCreateCityViewModel>)this.ViewData["cities"])
            {
                <option value="@city.Name">@city.Name</option>
            }
        </select>
        <span asp-validation-for="City" class="text-danger"></span>
        <hr class="hr-2 mt-4">
        <div class="d-flex justify-content-center mt-3">
            <button id="Btns" class="btn btn-primary">Create City</button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
