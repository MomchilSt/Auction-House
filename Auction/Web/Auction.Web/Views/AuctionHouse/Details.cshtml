@model Auction.Web.ViewModels.AuctionHouse.AuctionHouseDetailsViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-around row mt-5">
    <div id="auctionHouse-name-and-address-holder" class="w-45">
        <h5 class="text-center">Auction house</h5>
        <hr class="hr-2  mt-4" />
        <h3 class="text-center">@Model.Name</h3>
        <h5 class="text-center mt-5">@Model.Address</h5>
        <hr class="hr-2 mt-4" />
        <p class="text-center">@Model.Description</p>
        <div id="reviews-holder" class="w-45 mt-3">
            <h5 class="text-center"><a href="/AuctionHouse/Review/@Model.Id">Write a review</a></h5>
        </div>
    </div>
</div>
@foreach (var review in Model.Reviews)
{
    <div class="d-flex justify-content-around row mt-5">
        <div id="authorHolder" class="w-45">
            <h5>@review.Username</h5>
        </div>
    </div>
    <hr class="hr-2 mt-4 w-70" />
    <p class="text-center">@review.Description</p>
}