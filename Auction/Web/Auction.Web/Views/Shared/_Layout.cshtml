<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Auction</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Admin"))
    {
        <header>
            <nav id="mainHeader" class="navbar navbar-light navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
                <div class="container">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Item/Create"><span id="playButton" class="far fa-play-circle"></span>Create auction</a>
                            </li>
                        </ul>
                    </div>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav">
                            <li class="nav-item active">
                                <div class="dropdown show" id="administrationDropDown">
                                    <a class="nav-link active dropdown-toggle" 
                                       href="#" 
                                       id="administration-DropDown" 
                                       data-toggle="dropdown" 
                                       aria-haspopup="true" 
                                       aria-expanded="false">
                                        Administration actions
                                    </a>

                                    <div class="dropdown-menu" aria-labelledby="administrationDropDown">
                                        <a class="dropdown-item" href="/Administration/City/Create">Add City</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="/Administration/AuctionHouse/Create">Add Auction House</a>
                                    </div>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Identity/Account/Logout">Logout</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }
    else if (this.User.Identity.IsAuthenticated && this.User.IsInRole("User"))
    {
        <header>
            <nav id="mainHeader" class="navbar navbar-light navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
                <div class="container">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Item/Create"><span id="playButton" class="far fa-play-circle"></span>Create auction</a>
                            </li>
                        </ul>
                    </div>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Identity/Account/Logout">Logout</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }
    else
    {
        <header>
            <nav id="mainHeader" class="navbar navbar-light navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
                <div class="container">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }
    <div class="container">
        <table id="main-columns" style="table-layout: fixed;">
            <thead>
                <tr>
                    <td id="left-sidebar" class="hidden-xs-sm">
                        <h1>
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">
                                <img id="front-logo" src="~/images/indexLogo.png" />
                            </a>
                        </h1>
                    </td>
                    @if (this.User.Identity.IsAuthenticated)
                    {
                        <th id="searchBox" class="form-group justify-content-between">
                            <input type="text" class="form-control" id="products-search-bar" name="search" placeholder="Search..." />
                        </th>
                        <th>
                            <div id="clockbox"></div>
                            <script id="clockbox" type="text/javascript">
                                function GetClock() {
                                    var d = new Date();
                                    var nmonth = d.getMonth(), ndate = d.getDate(), nyear = d.getFullYear();
                                    var nhour = d.getHours(), nmin = d.getMinutes(), nsec = d.getSeconds();
                                    if (nmin <= 9) nmin = "0" + nmin;
                                    if (nsec <= 9) nsec = "0" + nsec;

                                    var clocktext = "" + ndate + "/" + (nmonth + 1) + "/" + nyear + " " + nhour + ":" + nmin + ":" + nsec + "";
                                    document.getElementById('clockbox').innerHTML = clocktext;
                                }

                                GetClock();
                                setInterval(GetClock, 1000);
                            </script>
                        </th>
                    }
                </tr>
            </thead>
        </table>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div id="footerContent">
            <a asp-controller="Home" asp-action="Index">Home</a>
        </div>

        <div id="secondaryFooter" class="container">
            &copy; 2019 - Go Auction. Всички права запазени.
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
